@{
    ViewData["Title"] = "Bulk Image Upload";
}

<h2>Bulk Image Upload</h2>

<form asp-action="BulkUpload" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="images">Choose Images:</label>
        <input type="file" id="images" name="images" class="form-control-file" multiple required />
    </div>
    <div class="text-danger">
        @Html.ValidationSummary()
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form>