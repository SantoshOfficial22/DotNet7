<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- Custom CSS for the profile icon -->
    <style>
        .profile-icon {
            color: #fff; /* Text color for the profile icon */
            margin-right: 10px; /* Adjust the spacing */
            font-size: 18px; /* Adjust the icon size */
            text-decoration: none; /* Remove underlines */
            position: absolute;
            right: 10px;
            top: 10px;
        }

        .logout-link {
            text-decoration: none; /* Remove underlines */
            color: #fff; /* Text color for the Logout link */
            margin-left: 10px; /* Adjust the spacing */
            font-size: 18px; /* Adjust the text size */
            position: absolute;
            right: 10px;
            top: 10px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Application name", "GetList", "Library", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "GetList", "Library", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("About", "About_", "Library", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "Contact_", "Library", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Find", "Find", "Library", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
            <div>
                <a href="/Profile" title="Profile" class="profile-icon">
                    @Html.ActionLink("Wellcome " + @Session["Email"].ToString(), "Login", "Home", new { area = "" }, new { @class = "navbar-brand" })

                </a>
                <a href="Logout" title="Logout" class="logout-link">
                    @Html.ActionLink("Logout", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </a>
                <!-- <a href="/Home/Index" title="Logout" class="logout-link">Logout</a> -->
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
